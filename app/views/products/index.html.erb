<p id="notice"><%= notice %></p>

<h2>Listing Products</h2>

<table class="table table-striped">
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.image_url, class: 'thumbnail') %></td>
        <td>
          <h3><%= product.title %></h3><br/>
          <%= truncate(strip_tags(product.description), length: 120) %>
        </td>
        <td><%= number_to_currency product.price, unit: 'Â£' %></td>
        <td>
          <%= link_to 'Show', product %><br/>
          <%= link_to 'Edit', edit_product_path(product) %><br/>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-success' %>
